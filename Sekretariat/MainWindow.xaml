                                    <ComboBoxItem Content="Imię"/>
                                    <ComboBoxItem Content="Drugie imię"/>
                                    <ComboBoxItem Content="Nazwisko"/>
                                    <ComboBoxItem Content="Nazwisko rodowe"/>
                                    <ComboBoxItem Content="Imię matki"/>
                                    <ComboBoxItem Content="Imię ojca"/>
                                    <ComboBoxItem Content="Data urodzenia"/>
                                    <ComboBoxItem Content="PESEL"/>
                                    <ComboBoxItem Content="Płeć"/>
                                    <ComboBoxItem Content="Klasa"/>
                                    <ComboBoxItem Content="Grupy"/>
