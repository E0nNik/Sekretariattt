                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="Uczniowie_SearchButton"  Content="Wyszukaj"/>
                                    <Button x:Name="Uczniowie_ClearSearchButton" Grid.Column="1"  Content="Wyczyść"/>
                                </Grid>
