<Window x:Class="Sekretariat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:self="clr-namespace:Sekretariat"
        mc:Ignorable="d"
        Title="Sekretariat szkolny"
        Width="1200"
        Height="750"
        WindowStartupLocation="CenterScreen"
        FontSize="15">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>

        

        <Menu HorizontalAlignment="center"  >
            <MenuItem Header="_Wyświetl" Width="150"  >
                <MenuItem Header="_Uczniowie" />
                <MenuItem Header="_Nauczyciele"  />
                <MenuItem Header="_Pracownicy obsługi"  />
                <MenuItem Header="_Skróty klawiszowe"   />
            </MenuItem>
            <MenuItem Header="_Dodaj" Width="150" >
                <MenuItem Header="Dodaj u_cznia"  />
                <MenuItem Header="Dodaj nac_zyciela"  />
                <MenuItem Header="Dodaj p_racownika obsługi"  />
            </MenuItem>
            <MenuItem Header="_Operacje"  Width="150">
                <MenuItem Header="_Wczytaj dane" />
                <MenuItem Header="Dodaj _zdjęcie do bazy" />
                <MenuItem Header="Generuj _raport okna"/>
                <MenuItem Header="_Generuj raport bazy danych"/>
            </MenuItem>
        </Menu>



        <ToolBarTray Grid.Row="1" ToolBarTray.IsLocked="True" HorizontalAlignment="center" >
            <ToolBar Background="#d1ebe2">
                <Button Name="LoadFromFileButton" Content="Wczytaj plik" Click="LoadFromFileToDB_Click" Margin="50,0,50,0"/>
                <Button Name="AddImageButton" Content="Wczytaj zdjecie" Click="AddImageToDBButton_Click" Margin="50,0,50,0"/>
            </ToolBar>
            <ToolBar Background="#d1ebe2">
                <Button Name="GenerateWindowReportButton"  Content="Generuj raport wyszukiwania" Margin="50,0,50,0" Click="GenerateWindowReportButton_Click" Background="#d1ebe2"/>
                <Button Name="GenerateAllDBReportButton"  Content="Generuj raport bazy danych" Click="GenerateAllDBReportButton_Click" Background="#d1ebe2" Margin="50,0,50,0"/>
            </ToolBar>
        </ToolBarTray>

        

        <TabControl Name="Sekretariat" Grid.Row="2">

           

            <TabItem Header="Uczniowie" Selector.Selected="Sekretariat_TabChanged">
