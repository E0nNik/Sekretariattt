                                    <ComboBoxItem>Imię</ComboBoxItem>
                                    <ComboBoxItem>Drugie imię</ComboBoxItem>
                                    <ComboBoxItem>Nazwisko</ComboBoxItem>
                                    <ComboBoxItem>Nazwisko rodowe</ComboBoxItem>
                                    <ComboBoxItem>Imię matki</ComboBoxItem>
                                    <ComboBoxItem>Imię ojca</ComboBoxItem>
                                    <ComboBoxItem>Data urodzenia</ComboBoxItem>
                                    <ComboBoxItem>PESEL</ComboBoxItem>
                                    <ComboBoxItem>Płeć</ComboBoxItem>
                                    <ComboBoxItem>Klasa</ComboBoxItem>
                                    <ComboBoxItem>Grupy</ComboBoxItem>
                                </ComboBox>
                                <TextBlock Grid.Row="2">Rosnąco / malejąco:</TextBlock>
