                                    <ComboBoxItem>Rosnąco</ComboBoxItem>
                                    <ComboBoxItem>Malejąco</ComboBoxItem>
                                </ComboBox>
                                <Grid Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Button Content="Sortuj" Name="Uczniowie_SortButton" Grid.Column="0" />
                                    <Button Content="Wyczyść" Name="Uczniowie_ClearSortButton" Grid.Column="1" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Wyszukiwanie">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"><Run Text="Wybierz kolumnę:"/></TextBlock>
